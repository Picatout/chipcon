; dimension des caractères pour les différentes polices
; hexadécimal petite
equ  F_HEIGH 6  
equ  F_WIDTH 4
; hexadécimale large
equ  LF_HEIGH 10 
equ  LF_WIDTH 8
; police ASCII
equ  TXT_HEIGH 8
equ  TXT_WIDTH 6

HIGH
CLS
LD V0, TXT_WIDTH*(21-11)/2
LD V1, TXT_HEIGH*64/TXT_HEIGH/2
LD I, hello
; affiche "hello world!" en centre de l'écran
PRT V0,V1
; test TONE, joue les 16 notes
;  V4 fréquence
;  V5 durée
;  V6 compteur délais
LD V4, 15
LD V5, 10
next_tone: TONE V4, V5
ld v6, 10
ld dt, v6
call delay
add v4, 255
se v4, 255
jp next_tone
;défilement de l'écran
;vers le bas jusqu'à 
;ce que le message disparaisse.
loop: SCD 1
LD V6,10
LD DT, V6
call delay
add v1, 255
se v1,0
jp loop
pixi_test:
rnd v4,127
rnd v5,63
pixi v4,v5
jp pixi_test
EXIT
delay:
ld v6, dt
se v6, 0
jp delay
ret
hello:
ascii "hello world!"
